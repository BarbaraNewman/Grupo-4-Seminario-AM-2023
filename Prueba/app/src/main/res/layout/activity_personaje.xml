<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoappaire"
    tools:context=".PersonajeActivity">

  <TextView
      android:layout_width="74dp"
      android:layout_height="39dp"
      android:text="Aang"
      android:textSize="30sp"
      tools:layout_editor_absoluteX="168dp"
      tools:layout_editor_absoluteY="73dp"
      app:layout_constraintBaseline_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <ImageView
      android:id="@+id/imageAang"
      android:layout_width="243dp"
      android:layout_height="215dp"
      android:layout_marginStart="84dp"
      android:layout_marginTop="148dp"
      app:layout_constraintBaseline_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/aang" />

  <Button
      android:id="@+id/btAtras"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight=".5"
      android:backgroundTint="#AB957DC1"
      android:textColor="#FBF9F9"
      android:text="Atras"
      app:layout_constraintBaseline_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <TextView
      android:layout_width="310dp"
      android:layout_height="235dp"
      android:layout_marginStart="48dp"
      android:layout_marginTop="392dp"
      android:text="Es un Nómada Aire nacido en el 12 del AG y el Avatar durante el conflicto de un siglo de duración conocido como la Guerra de los Cien Años. Su predecesor inmediato era el Avatar Roku, y su sucesor inmediato es el Avatar Korra."
      android:textSize="20sp"
      app:layout_constraintBaseline_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <include
      layout="@layout/toolbar"></include>


</androidx.constraintlayout.widget.ConstraintLayout>